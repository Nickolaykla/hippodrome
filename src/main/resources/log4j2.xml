<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name = "File" filename = "logs/hippodrome.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5level %logger{36}: %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
    <Root level="debug">
        <AppenderRef ref="File"/>
    </Root>
   </Loggers>

</Configuration>